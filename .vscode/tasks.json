{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Maven: clean package",
      "detail": "Run 'mvn clean package'",
      "type": "shell",
      "command": "mvn",
      "args": ["clean", "package"],
      "problemMatcher": []
    },
    {
      "label": "Maven plugin liquibase generateChangeLog",
      "detail": "Run 'mvn liquibase:generateChangeLog' for init changelog",
      "type": "shell",
      "command": "mvn",
      "args": [
        "liquibase:generateChangeLog",
        "\"-Dliquibase.outputChangeLogFile=${input:clFile}\"",
        "\"-Dliquibase.url=${input:clJpaModelUrl}\""
      ],
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "promptOnClose": true
    }
  ],
  "inputs": [
    {
      "id": "clFile",
      "type": "promptString",
      "description": "Enter path to changelog file"
    },
    {
      "id": "clJpaModelUrl",
      "type": "promptString",
      "description": "Enter reference to JPA model. Example: hibernate:spring:com.example.app.model?dialect=org.hibernate.dialect.PostgreSQLDialect"
    }
  ]
}
